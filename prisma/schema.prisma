// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  cellphone String    @unique
  cpfCnpj   BigInt    @unique @map("cpf_cnpj")
  birthDate DateTime  @map("birth_date")
  isCompany Boolean   @default(false) @map("is_company")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  order     Order[]
  provider  Provider?

  @@map("user")
}

model Order {
  id          String      @id @default(uuid())
  user        User        @relation(fields: [userId], references: [id])
  userId      String      @map("user_id")
  service     Service
  status      Status      @default(OPENED)
  title       String
  description String
  cep         String
  street      String
  district    String
  city        String
  state       String
  number      String
  lng         Float
  lat         Float
  distance    Float
  createdaAt  DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  deletedAt   DateTime?   @map("deleted_at")
  candidacy   Candidacy[]

  @@map("order")
}

model Candidacy {
  id         String    @id @default(uuid())
  order      Order     @relation(fields: [orderId], references: [id])
  orderId    String    @map("order_id")
  provider   Provider  @relation(fields: [providerId], references: [id])
  providerId String    @map("provider_id")
  createdaAt DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  deletedAt  DateTime? @map("deleted_at")

  @@map("candidacy")
}

model Provider {
  id             String      @id @default(uuid())
  user           User        @relation(fields: [userId], references: [id])
  userId         String      @unique
  fantasyName    String?     @map("fantasy_name")
  service        Service
  cep            String
  street         String
  district       String
  city           String
  state          String
  number         String
  lng            Float
  lat            Float
  experiences    Json
  formations     Json
  socialNetworks Json        @map("social_networks")
  createdaAt     DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")
  deletedAt      DateTime?   @map("deleted_at")
  candidacy      Candidacy[]

  @@map("provider")
}

enum Status {
  OPENED
  NEGOTIATION
  CLOSED
}

enum Service {
  TECHNICAL_ASSISTANCE
  RENOVATIONS_REPAIRS
  LESSON
  AUTOMOBILES
}
